{
  "id": "org.gtk.Gtk3theme.${name}",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "build-extension": true,
  "appstream-compose": false,
  "separate-locales": false,
  "build-options":
  {
    "prefix": "/usr/share/runtime/share/themes/${name}/gtk-3.0",
    "append-path": "/usr/share/runtime/share/themes/${name}/gtk-3.0/bin"
  },
  "modules": [
    {
      "name": "Mint-Y",
      "buildsystem": "simple",
      "build-commands": [
        "./generate-themes.py",
        "install -Dm644 usr/share/themes/${name}/index.theme /usr/share/runtime/share/themes/${name}/index.theme",
        "install -Dm644 usr/share/themes/${name}/gtk-3.0/gtk*.css /usr/share/runtime/share/themes/${name}/gtk-3.0",
        "install -Dm644 --target-directory=/usr/share/runtime/share/themes/${name}/gtk-3.0/assets usr/share/themes/${name}/gtk-3.0/assets/*"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/linuxmint/mint-themes.git",
          "commit": "${commit_hash}"
        }
      ],
      "modules": [
        {
          "name": "sassc",
          "config-opts": [
            "--with-libsass=/usr/share/runtime/share/themes/${name}/gtk-3.0"
          ],
          "cleanup": [
            "*"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/sass/sassc/archive/3.6.2.tar.gz",
              "sha256": "608dc9002b45a91d11ed59e352469ecc05e4f58fc1259fc9a9f5b8f0f8348a03"
            },
            {
              "type": "script",
              "dest-filename": "autogen.sh",
              "commands": [
                "autoreconf -si"
              ]
            }
          ],
          "modules": [
            {
              "name": "libsass",
              "cleanup": [
                "*"
              ],
              "sources": [
                {
                  "type": "archive",
                  "url": "https://github.com/sass/libsass/archive/3.6.5.tar.gz",
                  "sha256": "89d8f2c46ae2b1b826b58ce7dde966a176bac41975b82e84ad46b01a55080582"
                },
                {
                  "type": "script",
                  "dest-filename": "autogen.sh",
                  "commands": [
                    "autoreconf -si"
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.${name}.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.${name} --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.${name}"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.${name}.appdata.xml"
        }
      ]
    }
  ]
}